<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create a Quiz!</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/create_overview.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/questions.js"></script>
</head>
<%- include('partials/_header.ejs') %>

  <body>
    <main id="main">
      <form data-quiz-id="<%=id%>" id="questionform" action="/routes/create.js" method="post">
        <h1> <img src="https://www.cameronsworld.net/img/content/5/3.gif">Quiz Overview <img src="https://www.cameronsworld.net/img/content/5/3.gif"></h1>
      </form>
      <section>
        <% for (let id in quizData) { %>
          <div class="questionContainer">
            <section id="question">
              <label id="questionText">❔: <span>
                  <%= quizData[id].question %>
                </span></label>
              <br>
            </section>
            <section id="answerContainer">
              <label id="correctText">✅ : <span>
                  <%= quizData[id].correct %>
                </span></label>
              <br>
              <label class="incorrectText">❌: <span>
                  <%= quizData[id].answer1 %>
                </span></label>
              <br>
              <label class="incorrectText">❌: <span>
                  <%= quizData[id].answer2 %>
                </span></label>
              <br>
              <label class="incorrectText">❌: <span>
                  <%= quizData[id].answer2 %>
                </span></label>
              <br>
              <label class="incorrectText">❌: <span>
                  <%= quizData[id].answer4 %>
                </span></label>
              <br>
              <br>
          </div>
      </section>
      <% } %>
    </main>
  </body>

</html>
